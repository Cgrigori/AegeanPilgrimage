<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>{% block title %}Travel Website{% endblock %}</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='css/main.css') }}">
    <style>
      body { font-family: system-ui, -apple-system, Segoe UI, Roboto, sans-serif; margin: 2rem; }
      header { display: flex; align-items: center; justify-content: space-between; gap: 1rem; margin-bottom: 1.5rem; }
      nav a { margin-right: 1rem; text-decoration: none; }
      .auth a { margin-left: 1rem; text-decoration: none; }
    </style>
  </head>
  <body>
    <header>
      <nav>
        <a href="{{ url_for('pages.home') }}">Home</a>
        <a href="{{ url_for('trips.index') }}">Trips</a>
        <a href="{{ url_for('blog.index') }}">Blog</a>
        <a href="{{ url_for('pages.about') }}">About</a>
        <a href="{{ url_for('contact.contact') }}">Contact</a>
      </nav>
      <div class="auth">
        <a href="{{ url_for('auth.login') }}">Login</a>
        <a href="{{ url_for('auth.signup') }}">Sign up</a>
      </div>
    </header>
    <main>
      {% block content %}{% endblock %}
    </main>
  </body>
</html>
